<% if (user_signed_in? && Newsletter.subscribed?(current_user.email)) %>
  <%= link_to "구독해제", unsubscribe_newsletters_path(current_user), method: :post, remote: true, data:{confirm:"Are you sure?"}, class: 'btn btn-info' %>
<% else %>
  <%= link_to "구독하기", subscribe_newsletters_path(current_user), method: :post, remote: true, data:{confirm:"Are you sure?"}, class: 'btn btn-success' %>
<% end %>
