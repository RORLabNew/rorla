<h2 class='page_title'>뉴스레터 <small><%= action_name %></small></h2>

<table class="table">

  <tr>
    <th class='col-xs-2 text-right hidden-xs'><%= t("activerecord.attributes.newsletter.title") %></th>
    <td class='text-danger'><strong><%= @newsletter.title %></strong></td>
  </tr>

  <tr>
    <th class='text-right hidden-xs'><%= t("activerecord.attributes.newsletter.greeting") %></th>
    <% link_filter = AutoHtml::Link.new(target: '_blank') %>
    <td><%= simple_format link_filter.call(@newsletter.greeting) %></td>
  </tr>

  <%= show_sections %>

  <tr>
    <th class='text-right hidden-xs'><%= t("activerecord.attributes.newsletter.published_at") %></th>
    <td>
      <div class='section_head_mobile visible-xs'>발행일자</div>
      <%= @newsletter.published_at %>
    </td>
  </tr>

  <tr>
    <th class='text-right hidden-xs'><%= t("activerecord.attributes.newsletter.editor") %></th>
    <td>
      <div class='section_head_mobile visible-xs'>편집인</div>
      <%= @newsletter.editor.email %>
    </td>
  </tr>

  <tr>
    <th class='text-right hidden-xs'><%= t("activerecord.attributes.newsletter.poster") %></th>
    <td>
      <div class='section_head_mobile visible-xs'>포스터</div>
      <p><em class='text-muted'><%= @newsletter.poster.blank? ? "등록한 포스터 이미지가 없습니다." : @newsletter.poster %></em></p>
      <%= image_tag @newsletter.poster_url, width: '100%', style: 'border:1px solid #ccc;margintop:2em;border-radius:5px;' if @newsletter.poster_url.present? %>
    </td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to t('form_actions.edit'), edit_newsletter_path(@newsletter), class: 'btn btn-default' if user_signed_in? %>
  <%= link_to t('form_actions.back'), newsletters_path, class: 'btn btn-default' %>
  <%= link_to t('form_actions.preview'), preview_newsletter_path(@newsletter), class: 'btn btn-default' %>
</div>
