<%= simple_form_for(@newsletter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :greeting, input_html: { rows: 15 } %>
    <%= f.input :published_at %>
    <%= f.input :poster, as: :file %>
    <% if @newsletter.poster_url.present? %>
      <div>
        <%= image_tag @newsletter.poster_url, width: '100%', style: 'border:1px solid #ccc;border-radius:5px;' %>
        <p class='text-right'><em class='text-muted'><%= @newsletter.poster %></em></p>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t("form_actions.show"), @newsletter, class: 'btn btn-default' if @newsletter.persisted? %>
    <%= link_to t("form_actions.back"), newsletters_path, class: 'btn btn-default' %>
  </div>
<% end %>
