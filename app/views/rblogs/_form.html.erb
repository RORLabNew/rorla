<div class="modal fade " id="previewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content modal-content-one">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">[Preview] <%= @rblog.title %></h4>
      </div>
      <div class="modal-body">

        <div id='wmd-preview-content' class='wmd-preview'></div>
        <div style='text-align:center;'>- The End of rBlog -</div>
      </div>
    </div>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<%= simple_form_for(@rblog) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :content, :as => :pagedown %>
  </div>
  <div class="checkbox">
    <%= f.input :shared, as: :boolean, label: false, inline_label: "shared by #{ (!f.object.persisted? || current_user == @rblog.writer) ? "me (#{current_user.email})" : @rblog.email}"  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-default'%>
    <%= link_to 'Delete', @rblog, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' if @rblog.persisted? %>
    <%= link_to 'Show', @rblog, class: 'btn btn-default' if action_name == 'edit' %>
    <%= link_to 'Back', rblogs_path, class: 'btn btn-default' %>

  </div>
<% end %>
