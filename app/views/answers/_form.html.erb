<%= simple_form_for([@question, @answer], remote: true) do |f| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @answer.errors.messages.each do |field, messages| %>
        <% messages.each do |message| %>
          <li><%= t("labels.answer.#{field}") %><%= message %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :content, label: t("labels.answer.content"), placeholder: 'Add an answer.', input_html: {class: 'form-control', rows: '3'} %>
  </div>

  <div id="q_<%= @question.id %>_answer_form_error_message" class='answer_form_error_message'></div>

  <%= f.button :submit, '답변등록', class: "btn btn-primary" %>
<% end %>
