<%= simple_form_for( @user_profile, url: user_profile_path ) do |f| %>
  <%= f.error_notification %>
<br />
<div class="row">
  <div class='col-sm-6'>
    <div class="form-group mb-2">
      <label>프로필사진</label>
      <% if @user_profile.avatar?  %>
        <div class='border rounded px-2 mb-2'>
          <%= image_tag current_user.user_profile.avatar.url(:thumb), size: '100x100', class: 'img-responsive rounded d-block my-3 mx-auto' %>
          <label for="user_profile_remove_avatar">
          <%#= f.input :remove_avatar, label: '프로필사진 삭제', as: :boolean, input_html: { class: 'mr-1 mb-0'} %>
            <input type='checkbox' id="user_profile_remove_avatar" name="user_profile[remove_avatar]">
            프로필사진 삭제
          </label>  
        </div>
      <% end %>
      <%= f.input :avatar, as: :file, label: false, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :name, placeholder: 'Real name', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :intro, placeholder: 'Self introduction', input_html: { class: 'form-control', rows: 5 } %>
    </div>
  </div>
  <div class='col-sm-6'>
    <div class="form-group">
      <%= f.input :github, placeholder: 'Github account name', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :blog, placeholder: 'Blog URL... ex) http://...', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :website, placeholder: 'Website URL... ex) http://...', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :company, placeholder: 'Company name', input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :title, placeholder: 'Job title', input_html: { class: 'form-control' } %>
    </div>
  </div>
</div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <% if action_name == 'edit' %>
      <%= link_to '보기', user_profile_path, class: 'btn btn-outline-secondary'  %> |
      <%= link_to '삭제', user_profile_path, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
    <% end %>
  </div>
<% end %>
