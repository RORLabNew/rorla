<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :summary, input_html: { class: 'form-control', rows: 10 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to '보기', course_lectures_path(@course), class: 'btn btn-outline-secondary' if @course.persisted? %> |
    <%= link_to '강좌목록', courses_path, class: 'btn btn-outline-secondary' %>
    <span class='ml-2'>
      <%= f.check_box :published %>
      <%= f.label :published %>
    </span>
  </div>
<% end %>
