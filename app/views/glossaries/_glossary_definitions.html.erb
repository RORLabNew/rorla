<ol style="padding-left: 20px;margin-bottom: 0px;">
  <% @glossary.glossary_definitions.each do | definition | %>
    <li>
      <span id="definition_<%= definition.id %>"><%= definition.definition %> <small><%= link_to awesome_icon_label('thumbs-o-up', definition.get_likes.size.to_s), like_glossary_definition_path(definition.glossary, definition), method: :post, remote: true %></small></span><br />
      <% if definition.sentence.present? %>
        <span class='text-muted'>Ex) <%= definition.sentence %></span>
      <% end %>
    </li>
  <% end %>
</ol>
