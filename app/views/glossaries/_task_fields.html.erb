  <%= f.input :sentence, input_html: { rows: 5 } %>
  <div class='remove'>
    <%= link_to_remove_association awesome_icon('trash-o'), f, wrapper_class: 'glossary_definition',  class: 'btn btn-danger' %>
  </div>
</div>
