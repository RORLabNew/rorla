<H1>행사정보</H1>

<table class='table table-bordered'>
<tr>
  <th class='text-right'><strong>행사명</strong></th>
  <td><%= @group_purchase.event_name %></td>
</tr>

<tr>
  <th class='text-right'><strong>안내문</strong></th>
  <td><%= @group_purchase.event_info %></td>
</tr>

<tr>
  <th class='text-right'><strong>시작일시</strong></th>
  <td><%= @group_purchase.start_date %></td>
</tr>

<tr>
  <th class='text-right'><strong>종료일시</strong></th>
  <td><%= @group_purchase.end_date %></td>
</tr>

</table>

<div class="form-actions">
  <% if user_signed_in? && current_user.can_update?(@group_purchase) %>
    <%= link_to '수정', edit_group_purchase_path(@group_purchase), class: 'btn btn-default'  %> |
  <% end %>
  <%= link_to '행사목록', group_purchases_path, class: 'btn btn-default' %>
  <%= link_to '구매신청', group_purchase_purchase_requests_path(@group_purchase), class: 'btn btn-default' %>
</div>

<!-- 댓글 위젯 -->
<%= render "comments/comments_widget", resource: @group_purchase  %>
