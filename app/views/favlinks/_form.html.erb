<%= simple_form_for(@favlink) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :linkurl, placeholder: 'http://', input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= image_tag @favlink.capture_loc %>
    <%= f.input :capture_loc, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control', rows: 10 } %>
  </div>
  <div class="form-group">
    <%= f.input :shared, as: :boolean, inline_label: true, label: false %>
  </div>

  <%= f.button :submit, class: 'btn btn-default' %>
<% end %>
