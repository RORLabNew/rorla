$("#comments_count_of_<%=@comment.commentable.id%>").html("(<%= @comment.commentable.comments(true).size %>)").hide().slideDown('fast').effect("highlight", {}, 1000);
$("#comment_<%=@comment.id %>").effect("highlight", {}, 500).stop().slideUp("fast");

$("#notice_comments_of_<%=@comment.commentable.id%>").html("<%=j flash[:alert] %>").css('display', 'none').fadeIn('slow').delay(1000).fadeOut('slow');

<% flash.clear %>