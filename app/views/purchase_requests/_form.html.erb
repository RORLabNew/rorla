<%= simple_form_for(@purchase_request) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :req_date %>
    <%= f.input :send_date %>
    <%= f.input :sender_name %>
    <%= f.input :amount %>
    <%= f.input :confirmed %>
    <%= f.input :confirmed_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-default' %>
  </div>
<% end %>
