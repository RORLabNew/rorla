<h2>Q&A</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>질문</th>
      <th class="questioner">질문자</th>
      <th>작성일</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr class="item-<%= question.id %>">
        <td>
          <%= link_to question.title, question %>
          <span class="badge"><%= question.no_answers %></span>
        </td>
        <td class="questioner"><span title="<%= question.questioner %>" data-toggle="tooltip"><%= question.user.account_name %></span></td>
        <td><span title="<%= question.created_at %>" data-toggle="tooltip"><%= distance_of_time_in_words_to_now(question.created_at) %> 전</span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '질문 등록', new_question_path, class: 'btn btn-default' %>
