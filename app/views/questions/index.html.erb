<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3">질문</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr class="item-<%= question.id %>">
        <td><%= question.title %></td>
        <td><%= link_to 'Show', question, class: "btn btn-default" %></td>
        <td><%= link_to '수정', edit_question_path(question), class: "btn btn-default" %></td>
        <td><%= link_to '삭제', question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '질문 등록', new_question_path, class: 'btn btn-default' %>
