<%= simple_form_for(@question) do |f| %>
  <% if @question.errors.any? %>
    <%= alert_box_multiple('danger', "문제가 발생했습니다:", f.object.errors.messages) %>
  <% end %>

  <div class="form-group">
    <%= f.input :title, label: t("labels.question.title"), input_html: {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :content, label: t("labels.question.content"), input_html: {class: 'form-control', rows: '10'} %>
  </div>

  <div class='form-actions'>
    <%= f.button :submit, class: "btn btn-default" %>
    <%= link_to '목록보기', questions_path, class: "btn btn-default" %>
  </div>

<% end %>
