<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :unit_price %>
    <%= f.input :total_stock_count %>
    <%= f.input :sold_out %>
    <%= f.input :sold_out_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-default' %>
  </div>
<% end %>
