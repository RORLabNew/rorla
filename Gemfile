  gem 'letter_opener'
end

group :test do
  # Easily generate fake data (http://faker.rubyforge.org)
  gem "faker", "~> 1.1.2"
  # Capybara aims to simplify the process of integration testing Rack applications, such as Rails, Sinatra or Merb (http://github.com/jnicklas/capybara)
  gem "capybara", "~> 2.1.0"
  # Headless Webkit driver for Capybara (http://github.com/thoughtbot/capybara-webkit)
  gem 'capybara-webkit'
  # Strategies for cleaning databases.  Can be used to ensure a clean state for testing. (http://github.com/bmabey/database_cleaner)
  gem "database_cleaner", "~> 1.0.1"
  # Launchy is helper class for launching cross-platform applications in a fire and forget manner. (http://github.com/copiousfreetime/launchy)
  gem "launchy", "~> 2.4.2"
  # The next generation developer focused tool for automated testing of webapps (http://selenium.googlecode.com)
  gem "selenium-webdriver", "~> 2.35.1"
  # Making tests easy on the fingers and eyes (http://thoughtbot.com/community/)
  gem 'shoulda-matchers', require: false
  # Code coverage for Ruby 1.9+ with a powerful configuration library and automatic merging of coverage across test suites (http://github.com/colszowka/simplecov)
  gem 'simplecov', :require => false
  # Library for stubbing HTTP requests in Ruby. (http://github.com/bblimke/webmock)
  gem 'webmock', '1.19.0'
  # Record your test suite's HTTP interactions and replay them during future test runs for fast, deterministic, accurate tests. (https://github.com/vcr/vcr)
  gem 'vcr', '2.9.3'
end


